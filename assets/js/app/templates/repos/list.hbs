<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-2">
        <h3 class="panel-title">
          {{repos.length}} repos
        </h3>
      </div>
      <div class="col-md-4">
        <input type="text" class="form-control" placeholder="Type to search">
      </div>
      <div class="col-md-2 col-md-offset-4 text-right">
        <a href="/repos/new" class="pushstate btn btn-default">Create new</a>
      </div>
    </div>
  </div>
  <ul class="list-group repos-list">
    {{#each repos}}
    <li class="list-group-item repo-item" data-id="{{id}}">
      <button type="button" class="close" aria-hidden="true">&times;</button>
      <h4 class="list-group-item-heading">
        {{#if enabled}}
          <span class="subtle">âœŽ</span>
        {{/if}}
        <a class="pushstate" href="/repos/{{full_name}}" data-handle="{{full_name}}">{{name}}</a>
      </h4>
      <small class="subtle">Last update: {{updated_at}}</small>
      <br>
      <p class="list-group-item-text">
        {{description}}
      </p>
    </li>
    {{/each}}
  </ul>
</div>
